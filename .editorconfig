# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.yml]
indent_size = 2

[*.sh]
indent_size = 2

; shfmt
[[shell]]
indent_style = space
indent_size = 2
binary_next_line = true
switch_case_indent = true
space_redirects = true
